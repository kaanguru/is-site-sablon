---
import "~/styles/base.css";
import "~/styles/typography.css";
import settings from "~/config/settings.js";

import BaseHead from "~/components/BaseHead.astro";
import BasicNavbar from "~/components/navbars/BasicNavbar.astro";
import Footer from "~/components/footers/BasicFooter.astro";

export interface Props {
	title: string;
	description?: string;
	url?: URL | string;
	image?: string;
}
const title = settings.title;
const description = settings.description;
---

<html lang="tr" data-theme="corporate">
	<BaseHead title={title} description={description} />
	<body>
		<BasicNavbar>
			<li><a href="/urunler">Ürünler</a></li>
			<li><a href="/hakkimizda">Hakkımızda</a></li>
			<li><a href="/iletisim">İletişim</a></li>
		</BasicNavbar>
		<slot />
		<Footer />
		<style>
			a {
				@apply font-medium text-neutral tracking-wide hover:text-primary;
				@apply px-4 py-3 flex items-center;
				@apply dark:hover:text-white;
				@apply transition duration-150 ease-in-out;
			}
			.active {
				@apply font-bold text-primary;
			}
		</style>
	</body>
</html>
